<h1><%= title %></h1>
<% if(locals.user){ %>
    <div class="w-75 mx-auto mt-5">
        <br />

        <div class="row">
            <div class="col-6">
                <h2>List of Students:</h2>
            </div>

            <div class="col-6 d-flex justify-content-end">
                <a href="/student/addStudentsPage" type="button" class="btn btn-success align-self-center">+ Add Student</a>
            </div>
        </div>

        <% if(student.length > 0) {%>
        <div class="mt-3 mb-3">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Batch</th>
                        <th scope="col">Name</th>
                        <th scope="col">College</th>
                        <th scope="col">DSAFinalScore</th>
                        <th scope="col">WebDFinalScore</th>
                        <th scope="col">ReactFinalScore</th>
                        <th scope="col">Status</th>
                        <th scope="col" class="text-end">Action</th>
                    </tr>
                </thead>

                <tbody id="myTable">
                    <% for(let stud of student) {%>
                    <tr>
                        <th scope="row"><%=stud.batch%></th>
                        <td><%=stud.name%></td>
                        <td><%=stud.college%></td>
                        <td><%=stud.DSAFinalScore%></td>
                        <td><%=stud.WebDFinalScore%></td>
                        <td><%=stud.ReactFinalScore%></td>
                        <td><%=stud.status%></td>
                    </tr>
                    <%}%>
                </tbody>
            </table>
        </div>
        <%}else{%>
        <div class="w-75 mx-auto mt-5">
            <h2>No Records Found</h2>
        </div>
        <%}%>
    </div>

    <a href="http://localhost:8000/interview/allInterviews">Link To Interviews</a>

<% } %>